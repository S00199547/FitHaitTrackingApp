<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7E7C7C"
    tools:context=".TrackHydrationActivity">

    <TextView
        android:id="@+id/textViewHydrationTitle"
        android:layout_width="233dp"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:text="Track Hydration"
        android:textAlignment="center"
        android:textColor="#FFFDFD"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etHydrationDate"
        android:layout_width="314dp"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:hint="Date"
        android:inputType="date"
        android:textColorHint="#FFFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHydrationTitle" />

    <EditText
        android:id="@+id/etHydrationTime"
        android:layout_width="327dp"
        android:layout_height="62dp"
        android:layout_marginTop="28dp"
        android:hint="Time"
        android:inputType="time"
        android:textColorHint="#FFFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etHydrationDate" />

    <EditText
        android:id="@+id/etHydrationAmount"
        android:layout_width="326dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:hint="Amount (in ml)"
        android:inputType="number"
        android:textColorHint="#FFFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etHydrationTime" />

    <Button
        android:id="@+id/btnSaveHydration"
        android:layout_width="173dp"
        android:layout_height="69dp"
        android:layout_marginTop="40dp"
        android:background="#000000"
        android:backgroundTint="#504E4E"
        android:text="Save Hydration Entry"
        android:textAlignment="center"
        android:textColor="#FFFDFD"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etHydrationAmount" />

    <Button
        android:id="@+id/btnbackt"
        android:layout_width="131dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="#050505"
        android:backgroundTint="#504E4E"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="#FFFDFD"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnSaveHydration"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etHydrationAmount" />


</androidx.constraintlayout.widget.ConstraintLayout>