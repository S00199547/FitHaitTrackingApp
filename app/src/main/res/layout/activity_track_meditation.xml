<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7E7C7C"
    tools:context=".TrackMeditationActivity">

    <TextView
        android:id="@+id/tvMeditationTitle"
        android:layout_width="207dp"
        android:layout_height="43dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Track Meditation"
        android:textAlignment="center"
        android:textColor="#FFFDFD"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etMeditationDate"
        android:layout_width="328dp"
        android:layout_height="74dp"
        android:layout_below="@id/tvMeditationTitle"
        android:layout_marginTop="36dp"
        android:hint="Date (YYYY-MM-DD)"
        android:inputType="date"
        android:textColorHint="#FFFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMeditationTitle" />

    <EditText
        android:id="@+id/etMeditationTime"
        android:layout_width="330dp"
        android:layout_height="64dp"
        android:layout_below="@id/etMeditationDate"
        android:layout_marginTop="16dp"
        android:hint="Time (HH:MM)"
        android:inputType="time"
        android:textColorHint="#FFFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMeditationDate" />

    <EditText
        android:id="@+id/etMeditationDuration"
        android:layout_width="325dp"
        android:layout_height="76dp"
        android:layout_below="@id/etMeditationTime"
        android:layout_marginTop="12dp"
        android:hint="Duration (minutes)"
        android:inputType="number"
        android:textColorHint="#FFFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMeditationTime" />

    <Button
        android:id="@+id/btnSaveMeditation"
        android:layout_width="143dp"
        android:layout_height="74dp"
        android:layout_below="@id/etMeditationDuration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="#070707"
        android:backgroundTint="#504E4E"
        android:text="SaveMeditation"
        android:textAlignment="center"
        android:textColor="#FFFDFD"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMeditationDuration" />

    <Button
        android:id="@+id/btnbackt"
        android:layout_width="131dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:background="#050505"
        android:backgroundTint="#504E4E"
        android:text="Back"
        android:textColor="#FFFDFD"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnSaveMeditation"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMeditationDuration" />


</androidx.constraintlayout.widget.ConstraintLayout>