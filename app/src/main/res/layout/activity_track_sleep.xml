<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7E7C7C"
    tools:context=".TrackSleepActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Track Sleep"
        android:textAlignment="center"
        android:textColor="#FDF8F8"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSleepDate"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:layout_marginTop="48dp"
        android:hint="Date"
        android:inputType="date"
        android:textColorHint="#FDF8F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/etSleepTime"
        android:layout_width="273dp"
        android:layout_height="52dp"
        android:layout_marginTop="44dp"
        android:hint="Time"
        android:inputType="time"
        android:textColorHint="#FDF8F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSleepDate" />

    <EditText
        android:id="@+id/etSleepDuration"
        android:layout_width="274dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:hint="Duration (minutes)"
        android:inputType="number"
        android:textColorHint="#FDF8F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSleepTime" />

    <Button
        android:id="@+id/btnSaveSleep"
        android:layout_width="158dp"
        android:layout_height="63dp"
        android:layout_below="@id/etSleepDuration"
        android:layout_marginTop="44dp"
        android:background="#070707"
        android:backgroundTint="#504E4E"
        android:text="Save Sleep Entry"
        android:textColor="#FDF8F8"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSleepDuration" />

    <Button
        android:id="@+id/btnbackt"
        android:layout_width="125dp"
        android:layout_height="59dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:background="#050505"
        android:backgroundTint="#504E4E"
        android:text="Back"
        android:textColor="#FFFDFD"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnSaveSleep"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSleepDuration" />
</androidx.constraintlayout.widget.ConstraintLayout>