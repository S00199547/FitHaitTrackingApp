<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7E7C7C"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="289dp"
        android:layout_height="65dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="104dp"
        android:fontFamily="sans-serif-black"
        android:text="FitHabit App"
        android:textAlignment="center"
        android:textColor="#FDF8F8"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="261dp"
        android:layout_height="212dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btnTrackPage1"
        android:layout_width="146dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:background="#070707"
        android:backgroundTint="#504E4E"
        android:text="Fitness"
        android:textAlignment="center"
        android:textColor="#FFFDFD"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btnTrackPage2"
        app:layout_constraintHorizontal_bias="0.618"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnTrackPage2"
        android:layout_width="146dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:background="#020202"
        android:backgroundTint="#504E4E"
        android:text="Health*Habit"
        android:textAlignment="center"
        android:textColor="#FDF8F8"
        android:textColorHint="#757474"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="318dp"
        android:layout_height="49dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Let's Track"
        android:textAlignment="center"
        android:textColor="#FDF8F8"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.639"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>